<h1>Мои заказы</h1>

{{#if orders.length}}
  {{#each orders}}
   
        <div class="card card1">
          <div class="card-content">
            <span class="card-title">
            <b>Заказ: </b><small>{{_id}}</small>
            </small>
            <p ><b>Дата: </b><span class="date">{{date}}</span></p>
            <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

            <ol>
              {{#each courses}}
                <li>
                  {{course.title}} (x<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>

            <hr>

            <p><b>Цена: </b><span class="price">{{price}}</span></p>
          </div>
        </div>
     
  {{/each}}
{{else}}
  <p>Заказов пока нет</p>
{{/if}}
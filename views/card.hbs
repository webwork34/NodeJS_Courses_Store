<h1>Корзина</h1>

<div id="card">
  {{!-- проверяем, есть ли что-то в корзине --}}
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Количество</th>
          <th>Действия</th>
        </tr>
      </thead>

    <tbody>
      {{!-- будем итерировать массив курсов --}}
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          {{!-- Добавим новое поле data-csrf для защиты --}}
          <button 
            class="btn btn-small js-remove" 
            data-id="{{id}}"
            data-csrf="{{@root.csrf}}"
          >Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody> 
    </table>

    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

    {{!-- создадим новую форму для оформления заказа --}}
    <form action="/orders" method="POST">
        {{!-- добавим новый инпут для защиты --}}
      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button type="submit" class="btn">Сделать заказ</button>
    </form>
  {{else}}

    <p>Корзина пуста</p>
  {{/if}}
</div>

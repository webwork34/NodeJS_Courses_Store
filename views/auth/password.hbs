{{!-- создание формы ввода нового пароля --}}
<div class="row">
  <div class="col s6 offset-s3">

    {{!-- проверка на существующий email --}}
    {{#if error}}
      <p class="alert">{{error}}</p>
    {{/if}}

    <h3>Задать новый пароль</h3>
    <form action="/auth/password" method="POST">
      <div class="input-field">
        <input id="password" name="password" type="password" class="validate" required>
        <label for="password">Новый пароль</label>
        <span class="helper-text" data-error="Введите пароль"></span>
      </div>

         {{!-- добавим новый инпут для защиты --}}
      <input type="hidden" name="_csrf" value="{{csrf}}">
          {{!-- _csrf - на данное название будет смотреть middleware
          и автоматически делать все за нас --}}


      {{!-- добавим 2 новых input для обработки userId и token 
      из routers/auth.js --}}
      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">

      <button class="btn btn-primary" type="submit">Обновить пароль</button>
    </form>
  </div>
</div>